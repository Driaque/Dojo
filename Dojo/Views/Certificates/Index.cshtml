@model IEnumerable<Dojo.Models.Certificate>

@{
    ViewBag.Title = "Certificates";
}

<div class="box box-info">

    <div class="box-header with-border">
        <h2>@ViewBag.Title</h2>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Certificate_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Certificate_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Certificate_ID })
                </td>
            </tr>
        }

    </table>
    </div>